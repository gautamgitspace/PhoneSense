<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/ResultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/hello_world"
        tools:context=".MainActivity" />

    <Button
        android:id="@+id/BluetoothBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="44dp"
        android:text="Bluetooth" />

    <Button
        android:id="@+id/Location_Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/BluetoothBtn"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/BluetoothBtn"
        android:layout_alignLeft="@+id/textView1"
        android:text="Location" />

    <Button
        android:id="@+id/WifiBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Location_Btn"
        android:layout_alignBottom="@+id/Location_Btn"
        android:layout_alignParentRight="true"
        android:text="Wifi" />

    <Button
        android:id="@+id/PhotoBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Location_Btn"
        android:layout_alignRight="@+id/Location_Btn"
        android:layout_below="@+id/Location_Btn"
        android:layout_marginTop="19dp"
        android:text="Photo" />

    <Button
        android:id="@+id/BatteryBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/PhotoBtn"
        android:layout_alignBottom="@+id/PhotoBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/BluetoothBtn"
        android:text="Battery" />

  

</RelativeLayout>
